{
  "name": "focalpoint-ai",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"tsx server/index.ts\" \"sleep 2 && vite\"",
    "server": "tsx server/index.ts",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production tsx server/index.ts",
    "preview": "vite preview",
    "db:push": "drizzle-kit push",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:server": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:all": "npm run test && npm run test:server"
  },
